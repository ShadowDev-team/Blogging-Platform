                        <h1 class="display-4 mb-2"><%= user.username %></h1>
                        <p class="lead mb-4">Software Engineer, Blogger, and Traveler</p>
                        <div class="d-flex justify-content-center mb-4">
                            <a href="#" class="btn btn-dark"><i class="fab fa-twitter"></i></a>
