    <style>
        .profile-picture {
            width: 150px;
            height: 150px;
            object-fit: cover;
        }

        .media-object {
            width: 100px;
            height: 100px;
            object-fit: cover;
        }

        .edit-button {
            position: absolute;
            top: 20px;
            right: 20px;
        }

        .about-section {
            border-top: 1px solid #dee2e6;
            border-bottom: 1px solid #dee2e6;
            padding: 30px 0;
        }

        .stat-item {
            border-right: 1px solid #dee2e6;
            padding: 20px 0;
        }

        .stat-item:last-child {
            border-right: none;
        }
    </style>
</head>

<body>
    <div class="container my-5">
        <div class="row">
            <div class="col-md-8">
